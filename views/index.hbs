<link rel="stylesheet" href="/stylesheets/index.css">
<script src="https://kit.fontawesome.com/3cfc14f63a.js" crossorigin="anonymous"></script>
<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <input type="text" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..."
            value="{{keyword}}" aria-describedby="search-button">
          <div class="input-group-append">
            <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            <a href="/restaurants/new" class="btn btn-danger"><i class="fas fa-plus"></i></a>
          </div>                  
        </div>
      </form>      
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5 text-nowrap">
  <div class="row ">
    <div class="col-md-8 col-12 mx-auto">
      <div class="row row-cols-1 row-cols-md-3">
        <!-- 在這跑回圈顯示資料 -->
        {{#each restaurants}}
        <div class="col">
          <a href="/restaurants/{{this._id}}" class="text-secondary">
            <div class="card mb-3">
              <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}" />
              <div class="card-body p-3">
                <h6 class="card-title mb-1" text-decoration="none">{{this.name}}</h6>
                <div class="restaurant-category mb-1">
                  <i class="fas fa-utensils pr-2"></i>
                  {{this.category}}
                </div>
                <span class="badge badge-pill badge-danger font-weight-normal">
                  {{this.rating}}
                  <i class="fas fa-star fa-xs"></i>
                </span>
                <div class="container mt-1 p-0">
                  <a href="/restaurants/{{this._id}}/edit"><button class="btn btn-primary btn-sm">Edit</button></a>
                  <a href="/restaurants/{{this._id}}"><button class="btn btn-primary btn-sm">Details</button></a>

                  <form action="/restaurants/{{this._id}}?_method=DELETE" method="POST" style="display: inline;">
                    <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                  </form>
                </div>
              </div>
            </div>
          </a>
        </div>
        {{/each}}
      </div>
    </div>
  </div>
</div>